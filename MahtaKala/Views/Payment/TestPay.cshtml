@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model MahtaKala.Entities.Payment

<div class="row">
    <div class="col-md-6">
        <form method="post" action="@Url.Action("CallBackPay")">
            <input type="hidden" value="@Model.Id" name="id" />
            <input type="hidden" value="ok" name="status" />
            <button type="submit" class="btn btn-success">پرداخت</button>
        </form>
    </div>
    <div class="col-md-6">
        <form method="post" action="@Url.Action("CallBackPay")">
            <input type="hidden" value="@Model.Id" name="id" />
            <input type="hidden" value="cancel" name="status" />
            <button type="submit" class="btn btn-danger">لغو</button>
        </form>
    </div>
</div>