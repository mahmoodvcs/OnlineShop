@model List<ProductGroupListVM>
<div class="pb-45"></div>
@foreach (var itemx in Model)
{
  
        <div class="second-arrivals-product pb-45 pb-sm-5">
            <div class="container">
                <div class="main-product-tab-area">
                    <div class="tab-menu mb-25">
                        <div class="section-ttitle paddReigt">
                            <h2>@itemx.GroupName</h2>
                        </div>

                    </div>

                    <div class="tab-content">
                        <div class="tab-pane fade show active">
                            <div class="best-seller-pro-active owl-carousel">
                                @foreach (var item in itemx.Products)
                                {
                                    @await Html.PartialAsync("ProductView", item)
                                }
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    
}