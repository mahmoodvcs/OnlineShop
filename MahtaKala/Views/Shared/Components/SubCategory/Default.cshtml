@model List<MahtaKala.Entities.Category>
@if (Model.Count() != 0)
{
    <div class="breadcrumb-area mt-10">
        <div class="container">
            <div class="breadcrumb">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <a class="btn btn-outline-primary category-button" href="@Url.Content($"~/home/category?id={item.Id}")">
                            <img src="@item.Image" class="category-icon-small">
                            @item.Title
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
}