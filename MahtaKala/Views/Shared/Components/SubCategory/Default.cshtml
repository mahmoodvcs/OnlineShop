@model List<MahtaKala.Entities.Category>
@if (Model.Count() != 0)
{
    <div class="breadcrumb-area mt-10">
        <div class="container">
            <div class="breadcrumb">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <a class="btn btn-default wCategory" href="@Url.Content($"~/home/category?id={item.Id}")">
                            <img  src="@item.Image" class="img-circle"/>
                            <p> 
                                @item.Title
                            </p>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
}