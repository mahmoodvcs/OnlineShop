@using MahtaKala.Entities;
@model Brand
@{
    ViewData["Title"] = "به روز رسانی قیمت محصولات";
    Layout = "~/Views/Shared/_Staff.cshtml";
}

@using (Html.BeginForm("ImportProductPrices", "Staff", FormMethod.Post, new { encType = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>@ViewData["Title"]</h4>
    <hr />

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <div class="form-group">
        <label>فایل اکسل: </label>
        <div class="col-md-10">
            <input type="file" name="files" required />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="ارسال" class="btn btn-primary" />
        </div>
    </div>
</div>
}
