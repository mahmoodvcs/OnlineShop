@model MahtaKala.Models.StaffModels.ReportModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Staff.cshtml";
}


<div class="card-header">

    <div class="form-group row">
        <div class="col-lg-6">
            <div class="row">
                <div class="col-lg-6">
                    تعداد کل کاربران:
                </div>
                <div class="col-lg-6">
                    @Model.TotalUsers
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="row">
                <div class="col-lg-6">
                    تعداد کل محصولات:
                </div>
                <div class="col-lg-6">
                    @Model.TotalProducts
                </div>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-6">
            <div class="row">
                <div class="col-lg-6">
                    تعداد کل خرید ها:
                </div>
                <div class="col-lg-6">
                    @Model.TotalOrders
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="row">
                <div class="col-lg-6">
                    مبلغ کل محصولات خریداری شده:
                </div>
                <div class="col-lg-6">
                    @Model.TotalPayments
                </div>
            </div>
        </div>
    </div>
</div>
